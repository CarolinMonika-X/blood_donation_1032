{
  "version": 2,
  "builds": [
    {
      "src": "blood-donation-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "blood-donation-backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "blood-donation-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "blood-donation-frontend/dist/$1"
    }
  ]
}
